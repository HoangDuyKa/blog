<div class="mt-4">
    <h1>Update Course</h1>
    <form method="POST" action="/courses/{{courses._id}}?_method=PUT" enctype="application/json">
        <div class="form-group">
            <label for="name">name</label>
            <input type="text" class="form-control" value="{{courses.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="descriptions">descriptions</label>
            <textarea type="text" class="form-control" id="descriptions" name="descriptions">{{courses.descriptions}}</textarea>
        </div>
        <div class="form-group">
            <label for="level">level</label>
            <input type="text" class="form-control" value="{{courses.level}}" id="level" name="level">
        </div>
        <div class="form-group">
            <label for="videoId">videoId</label>
            <input type="text" class="form-control" value="{{courses.videoId}}" id="videoId" name="videoId">
        </div>
    <button type="submit" class="btn btn-primary">Save Course</button>
</form>
</div>